<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="playground_demo.open_days_listener.class">Playground\DemoBundle\EventListener\OpenDaysListener</parameter>
        <parameter key="playground_demo.trigger_time_listener.class">Playground\DemoBundle\EventListener\TriggerTimeListener</parameter>
    </parameters>

    <services>
        <service id="playground_demo.open_days_listener" class="%playground_demo.open_days_listener.class%">
            <!-- <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" priority="255" /> -->
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="playground_demo.trigger_time_listener" class="%playground_demo.trigger_time_listener.class%">
            <argument type="service" id="logger" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
